@code {
    string SelectedMenu="";
    protected override async Task OnInitializedAsync()
    {
        var uri = NavManager.Uri.Replace(NavManager.BaseUri, "");
        SelectedMenu = uri;
    }
  
  
    string GetActive(params string[] Menus)
    {
        foreach (var Menu in Menus)
        {
            if (SelectedMenu.ToLower() == Menu.ToLower())
            {
                return "active";
            }
        }
        return "";
    }
}
